{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":enablePreCommit",
    ":timezone(Europe/London)",
    "github>drae/k8s-home-ops/.renovate/autoMerge.json5",
