{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "mergeConfidence:age-confidence-badges",
    "replacements:all",
    "workarounds:all",

    ":dependencyDashboard",
    ":disableRateLimiting",
    ":timezone(Europe/London)",

    "github>drae/k8s-home-ops//.renovate/autoMerge.json5",
    "github>drae/k8s-home-ops//.renovate/commitMessage.json5",
    "github>drae/k8s-home-ops//.renovate/labels.json5",
    "github>drae/k8s-home-ops//.renovate/overrides.json5",
    "github>drae/k8s-home-ops//.renovate/groups.json5",
    "github>drae/k8s-home-ops//.renovate/grafanaDashboards.json5",
  ],
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  ignorePaths: [
    ".archived/**",
    "**/*.sops.*",
    "**/resources/**"
  ],
  "suppressNotifications": [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  flux: {
    managerFilePatterns: [
      "/^kubernetes/.+\\.ya?ml$/"
    ],
  },
  "helm-values": {
    managerFilePatterns: [
      "/^kubernetes/.+\\.ya?ml$/"
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      "/^kubernetes/.+\\.ya?ml$/"
    ],
  },
  "docker-compose": {
    managerFilePatterns: [
      "/(^|/)(?:docker-)?compose[^/]*\\.ya?ml(.j2)?$/"
    ],
  },
}
