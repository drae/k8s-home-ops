{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>drae/k8s-home-ops//.renovate/autoMerge.json5",
    "github>drae/k8s-home-ops//.renovate/customManagers.json5",
    "github>drae/k8s-home-ops//.renovate/commitMessage.json5",
    "github>drae/k8s-home-ops//.renovate/labels.json5",
    "github>drae/k8s-home-ops//.renovate/overrides.json5",
    "github>drae/k8s-home-ops//.renovate/groups.json5",
    "github>drae/k8s-home-ops//.renovate/grafanaDashboards.json5",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":enablePreCommit"
  ],
  "commitBodyTable": true,
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  ignorePaths: [
    ".archived/**"
  ],
  "platformCommit": "enabled",
  "rebaseWhen": "auto",
  "suppressNotifications": [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  "timezone": "Europe/Amsterdam",
  flux: {
    managerFilePatterns: [
      "/^kubernetes/.+\\.ya?ml$/"
    ],
  },
  "helm-values": {
    managerFilePatterns: [
      "/^kubernetes/.+\\.ya?ml$/"
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      "/^kubernetes/.+\\.ya?ml$/"
    ],
  },
  "docker-compose": {
    managerFilePatterns: [
      "/(^|/)(?:docker-)?compose[^/]*\\.ya?ml(.j2)?$/"
    ],
  },
}
