{
    "files.associations": {
        "**/ansible/**/*.yml": "ansible",
        "**/ansible/**/*.sops.yml": "yaml",
        "**/ansible/**/inventory/**/*.yml": "yaml",
    },
    "markdownlint.config": {
        "extends": ".markdownlint.yaml"
    },
    "yaml.schemas": {
        "ansible": [
            "infrastructure/ansible/*.yml",
            "infrastructure/ansible/*.yaml"
        ],
        "kubernetes": [
            "kubernetes/*.yml",
            "kubernetes/*.yaml"
        ],
    },
    "markdown.validate.enabled": true,
    "sops.defaults.ageKeyFile": "age.key",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv",
    "sops.binPath": "/home/paul/.local/share/mise/shims/sops"
}